ALWAYS

  ACTION_IF ((FILE_EXISTS ~dlc/sod-dlc.zip~) OR (FILE_EXISTS ~sod-dlc.zip~)) THEN BEGIN FAIL @999 END // DLC Merger check

  ACTION_IF !VARIABLE_IS_SET enhanced_edition THEN BEGIN

    // usual SFO loading - usually done in ALWAYS
    OUTER_SPRINT sfo_library_path "sfo" // the path (relative to your mod directory) to the directory SFO is in. Usually 'sfo'.
    OUTER_SPRINT sfo_tra_path "languages" // the path (relative to your mod directory) to the directory in which you keep tra files. Usually 'lang' or 'tra'.
    INCLUDE "%MOD_FOLDER%/%sfo_library_path%/sfo_init.tpc"
    
    INCLUDE ~iwdification/tpa/g3_cpmvars_master.tpa~ // cpm variables
  
    ACTION_IF !GAME_IS ~soa tob bgt ca tutu tutu_totsc iwd_in_bg2~ THEN BEGIN

      OUTER_SET enhanced_edition = 1
      LOAD_TRA ~iwdification/languages/%LANGUAGE%/game_strings_ee.tra~
      OUTER_SPRINT ~tra_location~ ~iwdification/languages~
    
    END ELSE BEGIN
  
      OUTER_SET enhanced_edition = 0

      // convert strings from UTF-8 for originals
      ACTION_DEFINE_ARRAY cdreload BEGIN game_strings END
      ACTION_DEFINE_ARRAY cdnoconvert BEGIN game_strings_ee setup END
      LAF HANDLE_CHARSETS INT_VAR from_utf8 = 1 infer_charsets = 1 
                          STR_VAR default_language = ~english~ tra_path = ~iwdification/languages~ out_path = ~weidu_external/iwdification/languages~ noconvert_array = cdnoconvert reload_array = cdreload END
      OUTER_SPRINT ~tra_location~ ~weidu_external/iwdification/languages~
    
    END    

  END

END

